@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

@Html.ActionLink("Create Role", "Create", "Management", htmlAttributes: new { @class = "btn btn-success" })


<hr />
<table id="tbrole" class="table table-striped table-bordered table-responsive" cellspacing="0">
    <thead>
        <tr>
           
            <th>
                Role Name

            </th>
           <th></th>
        </tr>
    </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td class="c">
                    @item.Name
                </td>
                <td>
                     @Html.ActionLink("Delete", "deleteRol", new { idRol = item.Id, rolName=item.Name })
                </td>
            </tr>
            
        }
 </table>