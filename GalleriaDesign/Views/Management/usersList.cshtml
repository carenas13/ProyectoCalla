@model IEnumerable<GalleriaDesign.Models.UserGalleria>

@{
    ViewBag.Title = "usersList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>usersList</h2>

<table class="table table-striped table-bordered table-responsive" cellspacing="0">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.userName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fullName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.userName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fullName)
            </td>
            <td>
                @*@Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |*@
                @Html.ActionLink("Roles", "seeRolesUser", new { id = item.IDUser }) |
                @Html.ActionLink("Delete", "deleteUser", new { idUser = item.IDUser })
            </td>
        </tr>
    }

</table>
