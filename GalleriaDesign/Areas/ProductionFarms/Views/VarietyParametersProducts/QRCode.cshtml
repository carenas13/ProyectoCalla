@model ApplicationProductionsFarms.Model.VarietyParametersProducts
@{
    ViewBag.Title = "QRCode";
}

<h2>QRCode</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Variety Parameters Products</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.idVariedad, "Code Variety Product", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("idVariedad", null, htmlAttributes: new { @class = "form-control" }, optionLabel: "Select Code")

            </div>
        </div>



        <div data-role="content">
            <form>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="button" value="Generar QR" class="btn btn-default" onclick="update_qrcode(this)">
                    </div>
                </div>
            </form>
            <div id="qr" name="qr"></div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}