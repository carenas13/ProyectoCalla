                    @Html.EditorFor(model => model.isActivo)
                    @Html.ValidationMessageFor(model => model.isActivo, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
