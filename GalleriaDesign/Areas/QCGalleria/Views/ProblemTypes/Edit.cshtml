@model GalleriaDesign.Models.ProblemType

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/QCGalleria/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>ProblemType</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.typeProblemID)

        <div class="form-group">
            @Html.LabelFor(model => model.descritpionProblem, htmlAttributes: new { @class = "control-label col-md-2" })
